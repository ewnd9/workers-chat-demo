{
  "name": "edge-chat-demo",
  "description": "An edge chat service that runs on Cloudflare Workers using Durable Objects",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "module": "./dist/index.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "yarn build:worker && yarn build:html",
    "build:worker": "esbuild --bundle --sourcemap --format=esm --outdir=dist --external:'chat.html' --external:'chat.css' --external:'chat.js' ./src/index.ts",
    "build:html": "esbuild --bundle --sourcemap --outdir=dist ./public/chat.ts && cp public/chat.{html,css} dist",
    "start:dev": "miniflare --watch --debug"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "esbuild": "^0.14.14",
    "miniflare": "^2.2.0"
  }
}
